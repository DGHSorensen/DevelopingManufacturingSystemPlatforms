@Article{Michaelis2015203,
  author       = {Michaelis, Marcel T. and Johannesson, Hans and ElMaraghy, Hoda A.},
  title        = {Function and process modeling for integrated product and manufacturing system platforms},
  journaltitle = {Journal of Manufacturing Systems},
  year         = {2015},
  volume       = {36},
  pages        = {203--215},
