  title        = {Challenges in Production and Manufacturing Systems Platform Development for Changeable Manufacturing},
  booktitle    = {Advances in Production Management Systems. Production Management for Data-Driven, Intelligent, Collaborative, and Sustainable Manufacturing},
  year         = {2018},
  editor       = {Moon, Ilkyeong and Lee, Gyu M. and Park, Jinwoo and Kiritsis, Dimitris and von Cieminski, Gregor},
